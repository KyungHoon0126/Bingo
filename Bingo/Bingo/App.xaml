<Application x:Class="Bingo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Bingo"
             StartupUri="View/SplashScreenWindow.xaml">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Theme/Color.xaml"/>
                <ResourceDictionary Source="/ResourceDictionaries/InputBingo.xaml"/>
                
                <ResourceDictionary Source="/ResourceDictionaries/ShuffleButton.xaml"/>
                <ResourceDictionary Source="/ResourceDictionaries/ExitButton.xaml"/>
                <ResourceDictionary Source="/ResourceDictionaries/GameStartButton.xaml"/>
                <ResourceDictionary Source="/ResourceDictionaries/AnimationMenuButton.xaml"/>

                <ResourceDictionary Source="/ResourceDictionaries/BingoTitle.xaml"/>
                <ResourceDictionary Source="/ResourceDictionaries/BingoItem.xaml"/>
                <ResourceDictionary Source="/ResourceDictionaries/BingoSubTitle.xaml"/>
                <ResourceDictionary Source="/ResourceDictionaries/BingoSubTitleBorder.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>     
    </Application.Resources>
</Application>
